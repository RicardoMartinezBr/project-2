<header class="header-global">

  <a href="/" class="shop-link text-link">{{ 'header.nav.shop' | t }}</a>

  <a href="/">
    <img src="{{ 'logo.svg' | asset_url }}" alt="logo">
  </a>

  {% assign cart_text = 'cart.button.count' | t: itemCount: cart.item_count %}
  {% assign cart_close_text = 'cart.button.close' | t %}

  <a href="/">
    <span class="cart-text">{{ cart_text }}</span>
    <span class="cart-text">{{ cart_close_text }}</span>
  </a>

</header>
