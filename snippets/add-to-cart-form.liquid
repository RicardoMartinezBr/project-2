<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" class="form-wrapper">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }}
        </option>
      {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
  <label for="Quantity">{{ 'product.form.quantity' | t }}</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">
  <button type="submit" name="add" id="AddToCart" class="AddToCartButton">{{ 'product.form.submit' | t }}</button>
</form>
