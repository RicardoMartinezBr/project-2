/*.index-background {
  background: url('{{ 'background.jpg' | asset_url }}');
}*/
.index-top {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* Footer Global */
footer a, footer p {
  color: #333333;
}

footer ul {
  list-style-type: none;
}

.footer-bottom, .footer-top {
  background: #ECE2D8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 40px;
}

.footer-bottom {
  border-top: 2px solid #3333331A;
}

footer {
  border-top: 2px solid #3333331A;
}

.footer-products {
  flex: 2;
}

.contact-list, .foooter-about-us {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.social-links-spacing {
  margin: 0 10px;
}

.social-links img {
  width: 16px;
  height: 16px;
}

.copyright-text, footer h4 {
  font-size: 13px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.075em;
  color: #333333;
  margin-bottom: 20px;
}

/* Product Page */
.single-product-page {
  display: flex;
  flex-direction: row;
  margin: 40px;
  height: 100vh;
  /*flex: 1;*/
}

/*.single-product-page {
  display: grid;
  grid-template-columns: 1fr 1fr;
  margin: $line-gutter*2;
}*/
.single-product-image {
  width: 50vw;
  height: 80vh;
  background-size: cover;
  background-position: center;
  object-fit: cover;
  /*flex: 1;*/
}

.product-image {
  /*flex: 1;*/
}

.product-info-wrapper {
  background: #ECE2D8;
  padding: 40px;
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 50vw;
  height: 80vh;
}

.product-info-wrapper {
  color: #FFFFFF;
  background: #333333;
}

button {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
}

/* Product Form */
.form-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.visually-hidden {
  display: none;
}

.AddToCartButton {
  padding: 20px;
  width: 100%;
  text-align: center;
  background: #ECE2D8;
}

/* Cart */
.cart-background {
  display: flex;
  flex-direction: row-reverse;
  position: relative;
}

.cart-checkout-box {
  background: #333333;
  color: #FFFFFF;
  width: 300px;
  overflow: auto;
  padding: 40px;
  height: 100%;
  position: fixed;
}

.cart-background a {
  color: #FFFFFF;
}

.cart-background h1 {
  text-align: center;
  margin-bottom: 20px;
}

.cart-product-image .cart-single-image {
  width: 80px;
  height: 80px;
  object-fit: cover;
}

.cart-product-image {
  position: relative;
}

.remove-x {
  position: absolute;
  top: 0;
  right: 0;
  display: none;
}

.cart-checkout-wrapper {
  display: flex;
  justify-content: space-between;
}

.cart-borders {
  border-top: 1px solid rgba(255, 255, 255, 0.15);
  padding-top: 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  padding-bottom: 20px;
}

.total-price {
  display: flex;
  justify-content: space-between;
  margin: 20px 0;
}

.cart-checkout-wrapper:hover .remove-x {
  display: block;
}

.checkout-button {
  background: #bea482;
  color: #FFFFFF;
  padding: 20px;
  width: 100%;
  text-align: center;
}

