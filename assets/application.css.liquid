/* Header global */
.header-global {
  background: #ECE2D8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 40px;
}

.header-global a {
  text-decoration: none;
  text-transform: uppercase;
  color: #000000;
  font-family: "Karla", sans-serif;
}

.header-global a:hover {
  color: #000000;
  font-family: "Karla", sans-serif;
}

