/* Global */
body {
  padding: 0;
  margin: 0;
}

h1, h2, h3, h4, h5, h6, p, a, ul, ol {
  font-family: "Karla", "Helvetica Neue", Arial, Helvetica, sans-serif;
  padding: 0;
  margin: 0;
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: none;
}

/* Header global */
.header-global {
  background: #ECE2D8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 40px;
}

.header-global a {
  text-decoration: none;
  text-transform: uppercase;
  color: #000000;
  font-family: "Karla", "Helvetica Neue", Arial, Helvetica, sans-serif;
}

.header-global a:hover {
  color: #000000;
  font-family: "Karla", "Helvetica Neue", Arial, Helvetica, sans-serif;
}

/* Index page */
/*.product-card {

