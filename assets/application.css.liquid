.index-top {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* Footer Global */
footer a, footer p {
  color: #333333;
}

footer ul {
  list-style-type: none;
}

.footer-bottom, .footer-top {
  background: #ECE2D8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 40px;
}

.footer-bottom {
  border-top: 2px solid #3333331A;
}

footer {
  border-top: 2px solid #3333331A;
}

.footer-products {
  flex: 2;
}

.contact-list, .foooter-about-us {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.social-links-spacing {
  margin: 0 10px;
}

.social-links img {
  width: 16px;
  height: 16px;
}

.copyright-text, footer h4 {
  font-size: 13px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.075em;
  color: #333333;
  margin-bottom: 20px;
}

