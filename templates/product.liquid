{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="single-product-page">
  <div class="product-info-wrapper">
    <h1>
      {{ product.title }}
      <span class="price">{{ product.price | money_without_trailing_zeros }}</span>
    </h1>

    <p>{{ product.description | strip_html | split: '.' | first | append: '.' }}</p>

    <div class="form">
      {% include 'add-to-cart-form' %}
    </div>
  </div>

  <div class="product-image">
    <img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg" class="single-product-image">
  </div>
</div>
